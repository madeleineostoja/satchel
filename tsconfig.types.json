{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",

    /* Type-Checking Options */
    "strict": false,

    /* Module resoltion */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
