{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",

    /* Type-Checking Options */
    "strict": true,

    /* Compiler options */
    "declaration": true,
    "removeComments": true,

    /* Module resoltion */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./types/**/*"]
}
